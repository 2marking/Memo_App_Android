<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ImagePicker.PhotoPickerActivity">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMainGreen"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/imageLoadingPlaceholderWhite"
        app:popupTheme="?attr/actionBarPopupTheme"
        app:theme="?attr/actionBarTheme" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/photoPickerFragment"
            android:name="com.example.appchallenge_lineplus_android.ImagePicker.fragment.PhotoPickerFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</LinearLayout>
