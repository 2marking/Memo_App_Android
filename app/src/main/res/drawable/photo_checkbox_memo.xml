<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_checked="true">
    <layer-list>
      <item>
        <shape>
          <corners android:radius="2dp"/>
        </shape>
      </item>
      <item android:drawable="@drawable/ic_checkbox_marked"/>
    </layer-list>
  </item>

  <item android:state_checked="false">
    <layer-list>
      <item>
        <shape>
          <corners android:radius="2dp"/>
        </shape>
      </item>
      <item android:drawable="@drawable/ic_checkbox_nomarked"/>
    </layer-list>
  </item>

</selector>